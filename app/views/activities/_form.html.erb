<%= form_with(model: activity, local: true, class: "form-container") do |form| %>
  <% if activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being saved:</h2>
      <ul>
      <% activity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="actions">
    <div class="form-group">
      <%= form.label :name, 'Select activity done:' %>
      <%= form.select(:name,
        options_for_select(
          [
            ['Battle Ropes', 'Battle Ropes'],
            ['Cycling', 'Cycling'],
            ['Elliptical', 'Elliptical'],
            ['Rowing', 'Rowing'],
            ['Running', 'Running'],
            ['Swimming', 'Swimming'],
            ['Tennis', 'Tennis'],
            ['Walking', 'Walking'],
            ['Weight-lifting', 'Weight-lifting'],
            ['Yoga', 'Yoga'],
            ['Other', 'Other']
          ], activity.name
        ), {}, { :class => 'form-control' }) %>
    </div>
    <div class="form-group">
      <%= form.label :date, 'Date:' %>
      <%= form.date_field :date, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :duration, 'Duration, in minutes:' %>
      <%= form.text_field :duration, :class => 'form-control' %>
    </div>
    <%= form.submit :class => 'btn btn-info btn-lg' %>
  </div>
<% end %>
